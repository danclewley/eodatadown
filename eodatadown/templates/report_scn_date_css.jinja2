@page
{
    size: A4;
    margin: 1cm;
    @top-left
    {
        content: "{{ header_title }}";
        font-size: 0.8em;
    }

    @bottom-left
    {
        content: "{{ info_footer }}";
        font-size: 0.8em;
    }

    @bottom-right
    {
        content: "{{ copyright_footer }}";
        font-size: 0.8em;
    }
}

h1
{
  font-family: Arial, Helvetica, sans-serif;
}

h2
{
  font-family: Arial, Helvetica, sans-serif;
}

figure
{
  margin:2px;
  display:inline-block;
  vertical-align:top;
  border:solid grey;
  text-align:center;
  position:relative;
  padding-bottom:2.8em;
}
figure img
{
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 5px;
  display:block;
  border:solid white;
  width:170px;
}
figcaption
{
  background:rgba(100,100,100,0.5);
  position:absolute;
  bottom:0;
  left:0;
  right:0;
  padding:0.2em 2px;
  min-height:2.4em;
  opacity:1;
  transition:0.5s;;
}
figcaption p
{
  font-weight: bold;
  font-family: Arial, Helvetica, sans-serif;
  margin:0;
}
#gridimg
{
  min-width:200px;
  max-width:650px;
  margin:auto;
}
body
{
  text-align:center;
  background-color: rgba(220,220,220, 0.5);
}
